rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    // Admin: full access when authenticated
    match /vignerons/{docId} {
      allow read, write: if request.auth != null;
    }
    match /vins/{docId} {
      allow read, write: if request.auth != null;
    }
    match /associes/{docId} {
      allow read, write: if request.auth != null;
    }
    match /groupements/{docId} {
      allow read, write: if request.auth != null;
    }

    // Campagnes: admin full access, public read (for token-based orders)
    // and public update (for order submission)
    match /campagnes/{docId} {
      allow read: if true;
      allow write: if true;
      // NOTE: In production, you should tighten this to:
      // allow write: if request.auth != null
      //   || (request.resource.data.diff(resource.data).affectedKeys().hasOnly(['associes']));
      // This allows unauthenticated users to only modify the 'associes' field
    }
  }
}
